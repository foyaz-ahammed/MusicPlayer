  <style name="Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
    <item name="android:contentDescription">@string/abc_action_menu_overflow_description</item>
  </style>

  <style name="PopupMenuLightStyle" parent="Base.ThemeOverlay.AppCompat.Light">
    <item name="android:textColor">@color/light_text_color_primary</item>
  </style>

  <style name="PopupMenuDarkStyle" parent="Base.ThemeOverlay.AppCompat.Dark">
    <item name="android:textColor">@color/dark_text_color_primary</item>
  </style>


