    <item name="ripple_color">@color/light_ripple_color</item>
    <item name="divider_color">@color/light_divider_color</item>

    <item name="background_grid">@drawable/bg_grid_light</item>
    <item name="background_list">@drawable/bg_list_light</item>
    <item name="background_rect_ripple">@drawable/bg_rect_ripple_light</item>
    <item name="background_oval_ripple">@drawable/bg_oval_ripple_light</item>

