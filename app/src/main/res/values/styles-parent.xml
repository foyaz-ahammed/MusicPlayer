    <item name="default_artist">@drawable/ic_artist</item>

    <item name="popupMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>

    <item name="android:statusBarColor">@color/light_background_color_main</item>
    <item name="android:navigationBarColor">@color/light_background_color_main</item>
    <item name="android:windowLightStatusBar">@bool/light</item>
    <item name="android:windowLightNavigationBar">@bool/light</item>

    <item name="md_background_color">@color/light_background_color_main</item>
    <item name="md_title_color">@color/light_text_color_primary</item>
