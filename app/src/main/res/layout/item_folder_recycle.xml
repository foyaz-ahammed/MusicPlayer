<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d56_size"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/folder_image"
        android:layout_width="@dimen/d40_size"
        android:layout_height="@dimen/d40_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/d15_size"
        android:layout_marginEnd="@dimen/d15_size"
        android:src="@drawable/ic_icons8_folder" />

    <View
        android:id="@+id/temp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/d15_size"
        android:layout_marginEnd="@dimen/d15_size" />

    <ImageButton
        android:id="@+id/folder_button"
        android:layout_width="@dimen/d20_size"
        android:layout_height="@dimen/d20_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:layout_marginEnd="@dimen/d20_size"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/folder_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/d25_size"
        android:textColor="?attr/text_color_secondary"
        android:textSize="@dimen/s12_size" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/check"
        android:layout_width="@dimen/d40_size"
        android:layout_height="@dimen/d40_size"
        android:button="@null"
        android:background="@drawable/custom_checkbox_folder"
        android:layout_marginEnd="@dimen/d10_size"
        android:layout_marginStart="@dimen/d15_size"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/temp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d48_size"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s12_size" />

        <TextView
            android:id="@+id/folder_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d48_size"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s10_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1_size"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/d15_size"
        android:background="?attr/divider_color" />
</RelativeLayout>