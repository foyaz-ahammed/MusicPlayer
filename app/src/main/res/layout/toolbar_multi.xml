<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_multi"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@drawable/round_gray_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent">

        <RelativeLayout
            android:id="@+id/set_ringtone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="2"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/multi_favourite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@drawable/ic_ringtone"
                android:tint="@color/light_text_color_secondary"/>

            <TextView
                android:id="@+id/set_ringtone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/multi_favourite_btn"
                android:layout_centerInParent="true"
                android:text="@string/ring"
                android:textColor="@color/light_text_color_primary"
                android:textSize="@dimen/s12_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/remove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/check_all_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@drawable/ic_delete"
                android:tint="@color/light_text_color_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/check_all_btn"
                android:layout_centerInParent="true"
                android:text="@string/delete"
                android:textColor="@color/light_text_color_primary"
                android:textSize="@dimen/s12_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transfer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/multi_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@drawable/ic_share"
                android:tint="@color/light_text_color_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/multi_popup"
                android:layout_centerInParent="true"
                android:text="@string/transfer"
                android:textColor="@color/light_text_color_primary"
                android:textSize="@dimen/s12_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/multi_playlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/multi_playlist_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@drawable/ic_add_24"
                android:tint="@color/light_text_color_secondary" />

            <TextView
                android:id="@+id/multi_playlist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/multi_playlist_btn"
                android:layout_centerInParent="true"
                android:text="@string/add_to_playlist"
                android:textColor="@color/light_text_color_primary"
                android:textSize="@dimen/s12_size" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/multi_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:alpha="50"
        android:background="@color/light_background_color_main"
        android:visibility="gone" />

</RelativeLayout>