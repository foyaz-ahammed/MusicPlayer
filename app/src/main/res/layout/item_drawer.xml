<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d56_size"
    android:id="@+id/item_root"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    >
  <LinearLayout
      android:background="?attr/selectableItemBackground"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <ImageView
        android:layout_width="@dimen/d44_size"
        android:layout_height="@dimen/d44_size"
        android:id="@+id/item_img"
        android:layout_marginLeft="@dimen/d16_size"
        android:scaleType="center"
         />

    <TextView
        android:id="@+id/item_text"
        android:textColor="@color/light_text_color_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s16_size"
        android:layout_weight="10"
        android:layout_marginLeft="@dimen/d20_size" />

    <TextView
        android:textAlignment="center"
        android:layout_width="@dimen/d40_size"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s16_size"
        android:textColor="@color/light_text_color_primary"
        android:gravity="center"
        android:layout_marginEnd="@dimen/d10_size"
        android:id="@+id/item_count"
        />

    <ImageView
        android:id="@+id/popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:gravity="end"
        android:layout_marginEnd="@dimen/d30_size"
        app:srcCompat="@drawable/ic_arrow"
        />

  </LinearLayout>
  
  <View
      android:layout_width="match_parent"
      android:layout_height="1.5dp"
      android:background="@color/light_text_color_primary"
      android:layout_marginStart="@dimen/d70_size"
      android:layout_marginEnd="@dimen/d30_size"
      android:layout_alignParentBottom="true"
      />

</RelativeLayout>