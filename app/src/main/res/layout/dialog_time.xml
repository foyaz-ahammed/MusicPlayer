<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_remain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d12_size"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/light_text_color_primary"
        android:textSize="@dimen/s28_size"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kr.musicplayer.ui.widget.HourMinutePicker
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_remain" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="@dimen/d115_size"
        android:layout_height="@dimen/d36_size"
        android:layout_marginStart="@dimen/d48_size"
        android:layout_marginTop="@dimen/d24_size"
        android:layout_marginBottom="@dimen/d24_size"
        android:background="@drawable/bg_round_24_ripple"
        android:text="@string/cancel"
        android:textAlignment="center"
        android:textColor="@color/light_text_color_primary"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="@dimen/d115_size"
        android:layout_height="@dimen/d36_size"
        android:layout_marginEnd="@dimen/d48_size"
        android:background="@drawable/bg_round_24_ripple"
        android:text="@string/confirm"
        android:textColor="@color/light_text_color_primary"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>